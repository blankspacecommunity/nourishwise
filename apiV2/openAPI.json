{
  "openapi": "3.0.0",
  "info": {
    "title": "NourishWise API",
    "version": "1.0.0",
    "description": "API for the NourishWise food recommendation application"
  },
  "servers": [
    {
      "url": "https://nourishwise.onrender.com",
      "description": "Render server"
    }
  ],
  "paths": {
    "/generate": {
      "post": {
        "summary": "Generate text based on the given prompt",
        "description": "Send a prompt to the IBM Watson LLM via Watson Assistant action and get a JSON response",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "The prompt to send to the IBM Watson LLM"
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response_text": {
                      "type": "string",
                      "example": "Generated text response"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Prompt is required"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
